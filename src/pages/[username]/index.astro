---
import DEV_DATA from "../../data/devs";
import {
  ArrowLeft,
  Link,
  Github,
  Linkedin,
  Globe,
  Wallet,
  Copy,
} from "@lucide/astro";

import MainLayout from "../../components/MainLayout.astro";

export function getStaticPaths() {
  // Generate static paths from the devs data
  return DEV_DATA.map(dev => ({
    params: { username: dev.username },
    props: { dev },
  }));
}

const { dev } = Astro.props;
---

<MainLayout title={`${dev.name} - Developer Profile`}>
  <div
    class="min-h-screen bg-gradient-to-br from-slate-900 via-purple-900 to-slate-900"
  >
    <!-- Navigation -->
    <nav class="border-b border-white/20 bg-white/10 backdrop-blur-md">
      <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
        <div class="flex h-16 items-center justify-between">
          <a
            href="/"
            class="flex items-center space-x-2 text-white transition-colors hover:text-purple-300"
          >
            <ArrowLeft class="h-5 w-5" />
            <span>Back to Home</span>
          </a>
          <div class="text-sm text-white/60">@{dev.username}</div>
        </div>
      </div>
    </nav>

    <!-- Main Content -->
    <main class="mx-auto max-w-4xl px-4 py-8 sm:px-6 lg:px-8">
      <!-- Profile Header -->
      <div
        class="mb-8 rounded-2xl border border-white/20 bg-white/10 p-8 backdrop-blur-md"
      >
        <div
          class="flex flex-col items-center space-y-6 md:flex-row md:items-start md:space-y-0 md:space-x-8"
        >
          {/* Avatar */}
          <div class="relative">
            {
              dev.avatar ? (
                <img
                  src={dev.avatar}
                  alt={`${dev.name}'s avatar`}
                  class="h-32 w-32 rounded-full border-4 border-white/20 shadow-2xl"
                />
              ) : (
                <div class="flex h-32 w-32 items-center justify-center rounded-full bg-gradient-to-br from-purple-400 to-pink-400 text-4xl font-bold text-white shadow-2xl">
                  {dev.name.charAt(0)}
                </div>
              )
            }
            <div
              class="absolute -right-2 -bottom-2 h-8 w-8 rounded-full border-4 border-white/20 bg-green-400"
            >
            </div>
          </div>

          {/* Profile Info */}
          <div class="flex-1 text-center md:text-left">
            <h1 class="mb-2 text-4xl font-bold text-white">{dev.name}</h1>
            <p class="mb-4 text-xl text-purple-300">@{dev.username}</p>

            {
              dev.bio && (
                <p class="max-w-2xl text-lg leading-relaxed text-white/80">
                  {dev.bio}
                </p>
              )
            }
          </div>
        </div>
      </div>

      {/* Social Links */}
      <div
        class="mb-8 rounded-2xl border border-white/20 bg-white/10 p-8 backdrop-blur-md"
      >
        <h2 class="mb-6 flex items-center text-2xl font-bold text-white">
          <Link class="mr-3 h-6 w-6" />
          Social Links
        </h2>

        <div class="grid grid-cols-1 gap-4 sm:grid-cols-2 lg:grid-cols-3">
          {/* GitHub */}
          <a
            href={dev.github}
            target="_blank"
            rel="noopener noreferrer"
            class="group flex items-center space-x-3 rounded-xl border border-white/10 bg-white/5 p-4 transition-all duration-300 hover:border-purple-400/50 hover:bg-white/10"
          >
            <div
              class="flex h-10 w-10 items-center justify-center rounded-lg bg-gray-800 transition-colors group-hover:bg-gray-700"
            >
              <Github class="h-6 w-6 text-white" />
            </div>
            <div>
              <p class="font-medium text-white">GitHub</p>
              <p class="text-sm text-white/60">View repositories</p>
            </div>
          </a>

          {/* LinkedIn */}
          {
            dev.linkedin && (
              <a
                href={dev.linkedin}
                target="_blank"
                rel="noopener noreferrer"
                class="group flex items-center space-x-3 rounded-xl border border-white/10 bg-white/5 p-4 transition-all duration-300 hover:border-blue-400/50 hover:bg-white/10"
              >
                <div class="flex h-10 w-10 items-center justify-center rounded-lg bg-blue-600 transition-colors group-hover:bg-blue-500">
                  <Linkedin class="h-6 w-6 text-white" />
                </div>
                <div>
                  <p class="font-medium text-white">LinkedIn</p>
                  <p class="text-sm text-white/60">Professional profile</p>
                </div>
              </a>
            )
          }

          {/* Website */}
          {
            dev.website && (
              <a
                href={dev.website}
                target="_blank"
                rel="noopener noreferrer"
                class="group flex items-center space-x-3 rounded-xl border border-white/10 bg-white/5 p-4 transition-all duration-300 hover:border-green-400/50 hover:bg-white/10"
              >
                <div class="flex h-10 w-10 items-center justify-center rounded-lg bg-green-600 transition-colors group-hover:bg-green-500">
                  <Globe class="h-6 w-6 text-white" />
                </div>
                <div>
                  <p class="font-medium text-white">Website</p>
                  <p class="text-sm text-white/60">Personal website</p>
                </div>
              </a>
            )
          }
        </div>
      </div>

      {/* Slush Wallet */}
      {
        dev.slushWallet && (
          <div class="rounded-2xl border border-white/20 bg-white/10 p-8 backdrop-blur-md">
            <h2 class="mb-6 flex items-center text-2xl font-bold text-white">
              <Wallet class="mr-3 h-6 w-6" />
              Slush Wallet
            </h2>

            <div class="rounded-xl border border-white/10 bg-white/5 p-4">
              <div class="flex items-center justify-between">
                <code class="font-mono text-sm break-all text-white/80">
                  {dev.slushWallet}
                </code>
                <button
                  onclick="navigator.clipboard.writeText('{dev.slushWallet}')"
                  class="ml-4 rounded-lg bg-purple-600 p-2 transition-colors hover:bg-purple-500"
                  title="Copy to clipboard"
                >
                  <Copy class="h-4 w-4 text-white" />
                </button>
              </div>
            </div>
          </div>
        )
      }
    </main>

    <!-- Footer -->
    <footer class="mt-16 py-8 text-center text-white/60">
      <p>Built with ❤️ using Astro & Tailwind CSS</p>
    </footer>
  </div>
</MainLayout>
